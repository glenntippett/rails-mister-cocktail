<h1>You're looking at a single cocktail now!</h1>
<h2><%= @cocktail.name.capitalize %></h2>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <p><%= dose.ingredient.name %></p>
  <%= link_to 'Delete Ingredient', dose_path(dose), method: :delete, data: { confirm: "Are you sure, buddy?" } %>
<% end %>

<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>

<%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure, buddy?" } %>
