<div class="container mt-4">
  <h1 class="text-center"><%= @cocktail.name.split.map(&:capitalize).join(' ') %></h1>

  <% @cocktail.doses.each do |dose| %>
  <p class="font-weight-bold"><span><%= dose.description %></span> <span><%= dose.ingredient.name %></span></p>
  <p><%= link_to 'Delete Ingredient', dose_path(dose), method: :delete, data: { confirm: "Are you sure, buddy?" }, class: 'text-muted' %>
    <% end %></p>

    <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>

    <%= link_to 'Delete Cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure, buddy?" }, class: 'btn btn-outline-danger' %>
  </div>
